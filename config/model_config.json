{
  "models": {
    "quick_classifier": {
      "provider": "openai",
      "model": "gpt-4o-mini",
      "description": "Fast, cheap model for initial crypto vs non-crypto classification",
      "temperature": 0.1,
      "max_tokens": 500,
      "cost_per_1k_input_tokens": 0.00015,
      "cost_per_1k_output_tokens": 0.0006,
      "timeout_seconds": 30,
      "max_retries": 3
    },
    "main_analyzer": {
      "provider": "openai",
      "model": "gpt-4o",
      "description": "Primary model for detailed crypto analysis with function calling",
      "temperature": 0.2,
      "max_tokens": 4000,
      "cost_per_1k_input_tokens": 0.0025,
      "cost_per_1k_output_tokens": 0.01,
      "timeout_seconds": 120,
      "max_retries": 3
    },
    "long_context_analyzer": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-latest",
      "description": "For large firmware analysis with 200K context window",
      "temperature": 0.2,
      "max_tokens": 8000,
      "cost_per_1k_input_tokens": 0.003,
      "cost_per_1k_output_tokens": 0.015,
      "timeout_seconds": 180,
      "max_retries": 3
    },
    "reasoning_model": {
      "provider": "openai",
      "model": "o1-preview",
      "description": "Advanced reasoning for protocol inference and complex crypto analysis",
      "temperature": 1.0,
      "max_tokens": 8000,
      "cost_per_1k_input_tokens": 0.015,
      "cost_per_1k_output_tokens": 0.06,
      "timeout_seconds": 300,
      "max_retries": 2
    },
    "embeddings_model": {
      "provider": "openai",
      "model": "text-embedding-3-large",
      "description": "Generate embeddings for function similarity and clustering",
      "dimensions": 3072,
      "cost_per_1k_tokens": 0.00013,
      "timeout_seconds": 60,
      "max_retries": 3
    }
  },
  "rate_limits": {
    "openai": {
      "requests_per_minute": 500,
      "tokens_per_minute": 150000
    },
    "anthropic": {
      "requests_per_minute": 50,
      "tokens_per_minute": 100000
    }
  },
  "model_selection_strategy": {
    "use_cheapest_first": true,
    "fallback_on_error": true,
    "fallback_order": [
      "quick_classifier",
      "main_analyzer",
      "long_context_analyzer",
      "reasoning_model"
    ],
    "thresholds": {
      "crypto_confidence_min": 0.7,
      "use_long_context_above_kb": 100,
      "use_reasoning_for_protocols": true,
      "use_reasoning_for_unknown_crypto": true
    }
  },
  "analysis_options": {
    "enable_caching": true,
    "cache_ttl_hours": 24,
    "parallel_analysis": true,
    "max_parallel_tasks": 5,
    "enable_cost_optimization": true,
    "enable_streaming": false
  }
}
