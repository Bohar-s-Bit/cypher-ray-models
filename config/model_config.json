{
  "models": {
    "quick_classifier": {
      "provider": "anthropic",
      "model": "claude-3-5-haiku-20241022",
      "description": "Fast, cheap model for initial crypto vs non-crypto classification",
      "temperature": 0.1,
      "max_tokens": 4000,
      "cost_per_1k_input_tokens": 0.0008,
      "cost_per_1k_output_tokens": 0.004,
      "timeout_seconds": 30,
      "max_retries": 3
    },
    "main_analyzer": {
      "provider": "anthropic",
      "model": "claude-3-5-haiku-20241022",
      "description": "Primary model for detailed crypto analysis with function calling",
      "temperature": 0.2,
      "max_tokens": 8000,
      "cost_per_1k_input_tokens": 0.0008,
      "cost_per_1k_output_tokens": 0.004,
      "timeout_seconds": 120,
      "max_retries": 3
    },
    "long_context_analyzer": {
      "provider": "anthropic",
      "model": "claude-3-5-haiku-20241022",
      "description": "For large firmware analysis with 200K context window",
      "temperature": 0.2,
      "max_tokens": 8000,
      "cost_per_1k_input_tokens": 0.0008,
      "cost_per_1k_output_tokens": 0.004,
      "timeout_seconds": 180,
      "max_retries": 3
    },
    "reasoning_model": {
      "provider": "anthropic",
      "model": "claude-3-opus-20240229",
      "description": "Advanced reasoning for protocol inference and complex crypto analysis",
      "temperature": 0.3,
      "max_tokens": 4096,
      "cost_per_1k_input_tokens": 0.015,
      "cost_per_1k_output_tokens": 0.075,
      "timeout_seconds": 300,
      "max_retries": 2
    }
  },
  "rate_limits": {
    "anthropic": {
      "requests_per_minute": 50,
      "tokens_per_minute": 100000
    }
  },
  "model_selection_strategy": {
    "use_cheapest_first": false,
    "fallback_on_error": true,
    "fallback_order": [
      "main_analyzer",
      "long_context_analyzer",
      "reasoning_model",
      "quick_classifier"
    ],
    "thresholds": {
      "crypto_confidence_min": 0.7,
      "use_long_context_above_kb": 100,
      "use_reasoning_for_protocols": true,
      "use_reasoning_for_unknown_crypto": true
    }
  },
  "analysis_options": {
    "enable_caching": true,
    "cache_ttl_hours": 24,
    "parallel_analysis": true,
    "max_parallel_tasks": 5,
    "enable_cost_optimization": true,
    "enable_streaming": false
  }
}
